<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane fx:controller="com.jackpf.kitchensync.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <TableView fx:id="tracks" GridPane.columnIndex="0"
               GridPane.rowIndex="1" editable="true">
        <columns>
            <TableColumn fx:id="filename" text="Filename" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="filename" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="bpm" text="BPM" prefWidth="150">
                <cellValueFactory>
                    <PropertyValueFactory property="bpm" />
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
    <HBox spacing="150">
        <children>
            <Button text="Add" prefWidth="75"/>
            <Button text="Add files" onAction="#addFiles" prefWidth="75"/>
        </children>
    </HBox>
</GridPane>