<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="com.jackpf.kitchensync.Controller"
          stylesheets="@/layout/main.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <VBox spacing="10">
        <children>
            <HBox spacing="115">
                <children>
                    <HBox spacing="10">
                        <children>
                            <Button fx:id="addButton" text="Add files" onAction="#addFiles" prefWidth="100" prefHeight="25"/>
                            <Button fx:id="runButton" text="Run" onAction="#run" prefWidth="75" prefHeight="25" disable="true"/>
                        </children>
                    </HBox>
                    <ProgressIndicator fx:id="progressIndicator"
                       maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                       minWidth="-Infinity" prefHeight="25" prefWidth="25"
                       visible="false" />
                </children>
            </HBox>
            <TableView fx:id="tracks" GridPane.columnIndex="0"
                       GridPane.rowIndex="1" editable="true">
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
                <columns>
                    <TableColumn fx:id="filename" text="Filename" prefWidth="250">
                        <cellValueFactory>
                            <PropertyValueFactory property="displayName" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="bpm" text="BPM" prefWidth="50">
                        <cellValueFactory>
                            <PropertyValueFactory property="bpm" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </children>
    </VBox>
</GridPane>